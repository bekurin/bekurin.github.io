{
  "name": "bekurin-github-io",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@bekurin/hypercharge",
    "dev:landing": "npm run dev --workspace=@bekurin/landing",
    "dev:hypercharge": "npm run dev --workspace=@bekurin/hypercharge",
    "build": "npm run build:all && npm run merge",
    "build:all": "npm run build --workspaces --if-present",
    "merge": "node scripts/merge-builds.mjs",
    "create-project": "node scripts/create-project.mjs",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "fs-extra": "^11.2.0"
  }
}
